<%- include('../_partial/_header_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Add Categoria</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
            </div>
        </div> 
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nome da Categoria</th>
                <th scope="col">Qntd Jogos atribuidos</th>
                <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach((categoria)=> { %>
                <tr>
                <td><%= categoria._id %></td>
                <td><%= categoria.nome %></td>
                <td>10</td>
                <td><a href="/admin/categorias/edit/<%= categoria._id %>">Edit</a></td>
                </tr>
                <% }) %> 
            </tbody>
            </table>
        </div>
        </main>
    </div>
    </div>


