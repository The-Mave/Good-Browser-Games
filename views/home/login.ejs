<%- include('../_partial/_header.ejs') %>
<body class="text-center">
  
<main id="mainpage" class="form-signin">
  <form>
    <img class="mb-4" src="/img/logo.png" alt="" width="100px">
    <h1 class="h3 mb-3 fw-normal">Faça Login</h1>

    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email</label>
    </div>
    
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Senha</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me">  Lembrar dados
      </label>
    </div>

    <div class="checkbox mb-3">
      <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
    </div>
    
    <button formaction="/signup" class="w-100 btn btn-lg btn-outline-secondary">Não possui uma conta?</button>

    <p class="mt-5 mb-3 text-muted">&copy; 2022-2022</p>
  </form>
</main>

